package gui;

import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;
import java.text.DateFormat;
import java.text.SimpleDateFormat;
import java.util.Calendar;
import java.util.Date;

import javax.swing.Icon;
import javax.swing.ImageIcon;
import javax.swing.JLabel;
import javax.swing.Timer;

class TimerWidget extends JLabel{

	private Timer t;
	private long startTime;

	TimerWidget() {

		this.setHorizontalAlignment(CENTER);
		this.setIcon(new ImageIcon(MainView.class.getResource("/resources/k-timer-icon.png")));

		t = new Timer(1000, new clockListener());
		t.setInitialDelay(0);
		reset();
	}

	void start() {
		t.start();
		startTime = Calendar.getInstance().getTime();
	}

	void pause() {
		t.stop();
	}

	void reset() {
		t.restart();
	}
	

	private class clockListener implements ActionListener {

		@Override
		public void actionPerformed(ActionEvent e) {
			TimerWidget.this.setText(t.toString());
		}
		
		private String getElapsedTime() {
			DateFormat dateFormat = new SimpleDateFormat("HH:mm:ss");
			Calendar cal = Calendar.getInstance().getTime();
			long elapsed = 
			return dateFormat.format(cal.getTime());
		}
		
		
	}
}
