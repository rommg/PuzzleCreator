package gui;

import gui.KnowledgeManagement;

import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;

import javax.swing.JButton;

class MainController {

	private MainModel model = null; 
	private MainView view = null;

	MainController(MainModel model, MainView view) {
		this.model = model;
		this.view = view;

		//add Controller listeners to View
		view.addMenuBtnsListener(new menuBtnListener());
	}

	class menuBtnListener implements ActionListener {

		@Override
		public void actionPerformed(ActionEvent e) {
			String btnName =  ((JButton)e.getSource()).getText();
			if (btnName.compareTo("play") == 0) {
				view.playBtnClicked();

			}
		}
	}
}
